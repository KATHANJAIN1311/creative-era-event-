    "mongoose": "^7.0.3",
    "cors": "^2.8.5",
    "socket.io": "^4.6.1",
    "dotenv": "^16.6.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "nodemailer": "^7.0.11",
    "uuid": "^9.0.0",
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
