{
  "name": "event-registration-system",
  "version": "1.0.0",
  "description": "Event Registration & Entry Automation System",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node index.js",
